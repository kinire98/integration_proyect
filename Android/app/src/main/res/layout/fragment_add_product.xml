<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.fragments.add.AddProductFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".15"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".77"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".15"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/end"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".85"
        />
    <TextView
        android:id="@+id/name_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/top"
        app:layout_constraintBottom_toTopOf="@id/category_label"
        app:layout_constraintStart_toStartOf="@id/start"
        app:layout_constraintEnd_toStartOf="@id/name_field"
        android:text="@string/name"
        />
    <EditText
        android:id="@+id/name_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/top"
        app:layout_constraintBottom_toTopOf="@id/category_field"
        app:layout_constraintStart_toEndOf="@id/name_label"
        app:layout_constraintEnd_toEndOf="@id/end"
        android:inputType="text"
        android:padding="10dp"
        />
    <TextView
        android:id="@+id/category_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/name_field"
        app:layout_constraintBottom_toTopOf="@id/price_label"
        app:layout_constraintStart_toStartOf="@id/start"
        app:layout_constraintEnd_toStartOf="@id/category_field"
        android:text="@string/category"
        />
    <EditText
        android:id="@+id/category_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/name_field"
        app:layout_constraintBottom_toTopOf="@id/price_field"
        app:layout_constraintStart_toEndOf="@id/name_label"
        app:layout_constraintEnd_toEndOf="@id/end"
        android:inputType="text"
        android:padding="10dp"
        />
    <TextView
        android:id="@+id/price_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/category_label"
        app:layout_constraintBottom_toTopOf="@id/image_label"
        app:layout_constraintStart_toStartOf="@id/start"
        app:layout_constraintEnd_toStartOf="@id/price_field"
        android:text="@string/price"
        />
    <EditText
        android:id="@+id/price_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/category_field"
        app:layout_constraintBottom_toTopOf="@id/image_button"
        app:layout_constraintStart_toEndOf="@id/price_label"
        app:layout_constraintEnd_toEndOf="@id/end"
        android:inputType="numberDecimal"
        android:padding="10dp"
        />
    <TextView
        android:id="@+id/image_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/price_label"
        app:layout_constraintBottom_toTopOf="@id/upload_button"
        app:layout_constraintStart_toStartOf="@id/start"
        app:layout_constraintEnd_toStartOf="@id/image_button"
        android:text="@string/image"
        />
    <Button
        android:id="@+id/image_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/price_field"
        app:layout_constraintBottom_toTopOf="@id/upload_button"
        app:layout_constraintStart_toEndOf="@id/price_label"
        app:layout_constraintEnd_toEndOf="@id/end"
        android:text="@string/select_image"
        />
    <Button
        android:id="@+id/upload_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image_button"
        app:layout_constraintBottom_toBottomOf="@id/bottom"
        app:layout_constraintStart_toStartOf="@id/start"
        app:layout_constraintEnd_toEndOf="@id/end"
        android:text="@string/upload_product"
        android:layout_marginHorizontal="45dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>